<div class="col-start-1 col-end-13">


    <div class="solde-section margin-top-l">
        <div class="flex space-between alignitems-center fullwidth">
            <div class="solde-legend">Solde initial</div>
            <div class="solde">{{ soldeInitial|number_format(2, ',', ' ')  }} €</div>
        </div>
        <div class="flex space-between alignitems-center fullwidth">
            <div class="solde-legend">Solde selon le cours du jour</div>

            {% if soldeCurrent > soldeInitial %}
                <div class="solde-positif">
            {% else %}
                <div class="solde-negatif">
            {% endif %}
                {{ soldeCurrent|number_format(2, ',', ' ') }} €
            </div>
        </div>
    </div>
</div>